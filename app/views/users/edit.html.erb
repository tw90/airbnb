Update your profile
<%= form_for @user do |f| %>
	<%= f.label :email %>
 	<%= f.text_field :email %>
 	<%= f.label :password %>
 	<%= f.password_field :password %>
 	<%= f.file_field :avatars, multiple: true %>
 	<%= f.submit "Save Changes" %>
 <% end %>


<!-- f represents the form builder project -->
<!-- f.submit creates a submit button for the form -->